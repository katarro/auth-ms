datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Rol {
  CLIENTE
  EJECUTIVO
  ADMIN
}

enum Estado {
  PENDIENTE
  ATENDIDO
  CANCELADO
}

model usuario {
  id         Int               @id @default(autoincrement()) @unique
  nombre     String
  correo     String            @unique
  contrasena String
  rol        Rol
  registro   registro_numero[]
  Fila       fila[]
}

model sucursal {
  id        Int               @id @default(autoincrement()) @unique
  nombre    String
  direccion String            @unique
  horario   DateTime
  estado    Boolean
  fila      fila[]
  registro  registro_numero[]
}

model fila {
  id                   Int      @id @default(autoincrement()) @unique
  numero_anterior      Int
  numero_actual        Int
  numero_siguiente     Int
  ultima_actualizacion DateTime
  usuario              usuario  @relation(fields: [usuario_id], references: [id])
  usuario_id           Int
  sucursal             sucursal @relation(fields: [sucursal_id], references: [id])
  sucursal_id          Int
}

model registro_numero {
  id          Int      @id @default(autoincrement()) @unique
  sucursal    sucursal @relation(fields: [sucursal_id], references: [id])
  sucursal_id Int
  usuario     usuario  @relation(fields: [usuario_id], references: [id])
  usuario_id  Int
  numero      Int
  estado      Estado
  creado_en   DateTime
}
